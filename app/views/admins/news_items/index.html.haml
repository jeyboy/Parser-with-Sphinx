.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admins_news_items_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_news_item_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      NewsItems
    .inner
      %table.table
        %tr
          %th.first Title
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @news_items.each do |news_item|
          %tr{:class => cycle("odd", "even")}
            %td{:width => "60%"}
              = link_to news_item.title, admins_news_item_path(news_item)
            %td{:width => "25%"}
              = news_item.created_at
            %td.last
              #{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_news_item_path(news_item)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admins_news_item_path(news_item), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
