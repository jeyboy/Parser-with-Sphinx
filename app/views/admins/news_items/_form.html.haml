.group
  = f.label :topic_id, t("activerecord.attributes.news_item.topic_id", :default => "Topic"), :class => :label
  = f.select :topic_id, Topic.all.collect {|p| [ p.title, p.id ] }

.group
  = f.label :title, t("activerecord.attributes.news_item.title", :default => "Title"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :body, t("activerecord.attributes.news_item.body", :default => "Body"), :class => :label
  = f.text_area :body, :class => 'text_field'
  %span.description Ex: a text block
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admins_news_items_path, :class => "text_button_padding link_button"
