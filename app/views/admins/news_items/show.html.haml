.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admins_news_items_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_news_item_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admins_news_item_path
  .content
    .inner
      %p
        %b
          #{@news_item.topic.title} >> #{@news_item.title}
        = raw @news_item.body
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admins_news_item_path(@news_item), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "") + " " + t("web-app-theme.delete", :default => "Delete"), admins_news_item_path(@news_item), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
