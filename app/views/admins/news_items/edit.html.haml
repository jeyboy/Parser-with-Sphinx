.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admins_news_items_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_news_item_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_news_item_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      NewsItem
    .inner
      = form_for @news_item, :url => admins_news_item_path(@news_item), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
